@{
    var nomeView = (string) ViewData["NomeView"];
}

<!DOCTYPE html>
<html lang="br/pt">

<head>

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>RoleTop</title>
    <!-- colocar css -->
    @if("Home".Equals(nomeView))
    {
        <link rel="stylesheet" type="text/css" href="~/css/style.css">
    }
    @if("Galeria".Equals(nomeView))
    {
        <link rel="stylesheet" type="text/css" href="~/css/galeria.css">
    }
    @if("SobreNos".Equals(nomeView))
    {
        <link rel="stylesheet" type="text/css" href="~/css/sobreNos.css">
    }
    @if("FAQ".Equals(nomeView))
    {
        <link rel="stylesheet" type="text/css" href="~/css/FAQ.css">
    }
    @if("LocalizeNos".Equals(nomeView))
    {
        <link rel="stylesheet" type="text/css" href="~/css/localize.css">
    }
    @if("Cadastro".Equals(nomeView))
    {
        <link rel="stylesheet" type="text/css" href="~/css/cadastro.css">
        <link rel="stylesheet" type="text/css" href="~/css/util.css">
    }
    @if("Login".Equals(nomeView))
    {
        <link rel="stylesheet" type="text/css" href="~/css/login.css">
        <link rel="stylesheet" type="text/css" href="~/css/util.css">
    }
    @if("Cliente".Equals(nomeView))
    {
        <link rel="stylesheet" type="text/css" href="~/css/logado.css">
    }


</head>


    <header>

        <nav>
            <div class="text.n">

                <ul>
                    <li> <a asp-controller="Home" asp-action="Index"><img src="~/img/logo.jpg.png" id="logo"></a></li>
                    <li class="bt-common-menu"><a onclick="toggleMobileMenu()" class="sob" asp-controller="Galeria" asp-action="Index">Galeria</a></li>
                    <li class="bt-common-menu"><a onclick="toggleMobileMenu()" class="sob" asp-controller="SobreNos" asp-action="Index1">SobreNos</a></li>
                    <li class="bt-common-menu"><a onclick="toggleMobileMenu()" class="sob" asp-controller="FAQ" asp-action="Index2">FAQ</a></li>
                    <li class="bt-common-menu"><a onclick="toggleMobileMenu()" class="sob" asp-controller="LocalizeNos" asp-action="Index3">Localize-nos</a></li>
                    <li class="bt-common-menu"><a onclick="toggleMobileMenu()" class="sob" asp-controller="Cadastro"asp-action="Index4">Cadastro</a></li>
                    <li class="bt-common-menu"><a onclick="toggleMobileMenu()" class="sob" asp-controller="Login" asp-action="Index5">Login</a></li>
                    
                </ul>

            </div>
        </nav>
    </header>

@RenderBody()


    </html>